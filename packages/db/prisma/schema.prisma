generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Example model for CQRS demonstration
model SystemStatus {
  id        String   @id @default(cuid())
  status    String   @default("operational")
  message   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_status")
}
