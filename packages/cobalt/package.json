    "@biomejs/biome": "^1.9.4",
    "@cobalt/tsconfig": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
