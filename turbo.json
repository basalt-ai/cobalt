{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"cache": false
		},
		"test:watch": {
			"cache": false,
			"persistent": true
		},
		"test:coverage": {
			"cache": false
		},
		"lint": {
			"outputs": []
		},
		"db:generate": {
			"cache": false
		},
		"db:migrate": {
			"cache": false
		}
	}
}
