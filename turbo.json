{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "dashboard-dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"cache": false
		},
		"test:watch": {
			"cache": false,
			"persistent": true
		},
		"test:coverage": {
			"cache": false
		},
		"lint": {
			"outputs": []
		}
	}
}
